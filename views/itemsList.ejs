<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            padding: 0;
            align-items: center;
            justify-content: center;
            display: flex;
            flex-direction: column;

        }
        .item {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
        }
        .item img {
            max-width: 100%;
            height: auto;
        }
        .navbar{
            margin-top: 30px;
            width: 60%;
            height: 100px;
            background-color: #016a08;
            color: white;
            text-align: center;
            line-height: 50px;
            font-size: 20px;
            display: flex;
            justify-content: space-around;
            align-items: center;
            flex-direction: row;
            border-radius:20px ;
        }
        .navbar a{
            text-decoration: none;
            color: white;
            margin: 0 20px;
            font-size: 24px;
            font-weight: bold;
        }
        .navbar a:hover{
            color: #f2f2f2;
        }
    </style>
</head>
<body>
<div class="navbar">
    <a href="/home">Home</a>
    <a href="/figures">Historical Figures</a>
    <a href="/items">Items</a>
    <a href="/logout">Log out</a>
</div>
<h1 class="text-center">Items</h1>
<div class="container">
    <div class="row">
        <% items.forEach(item => { %>
            <div class="col-md-4">
                <div class="item">
                    <% item.pictures.forEach(picture => { %>
                        <img src="<%= picture %>" class="img-fluid mb-2" alt="Item Image">
                    <% }) %>
                    <% item.names.forEach(name => { %>
                        <h2><%= name.name %></h2>
                    <% }) %>
                    <% item.descriptions.forEach(description => { %>
                        <p><%= description.description %></p>
                    <% }) %>
                    <p>Created: <%= item.createdAt %></p>
                    <p>Updated: <%= item.updatedAt %></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>
</body>
</html>