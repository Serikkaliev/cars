<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
        padding: 0;

    }
        .item {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
    }
        .item img {
        max-width: 100%;
        height: auto;
    }
    nav{
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            padding: 20px;
            background-color: #007bff;
    }
    nav a{
            color: #fff;
            text-decoration: none;
            font-size: 20px;
        }
    </style>
</head>
<body>
<nav>
    <a href="/home">Home</a>
    <a href="/figures">Historical Figures</a>
    <a href="/items-add-page">Add Items</a>
    <a href="/items-for-admin">Items</a>
    <a href="/logout">Logout</a>
</nav>
<div class="navbar">
    <a href="/main" class="text-white">Main</a>
    <a href="/exercises" class="text-white">Exercise</a>
    <a href="/items-add-page" class="text-white">Create Items</a>
    <a href="/items-for-admin" class="text-white">Items</a>
    <a href="/logout" class="right">Logout</a>
</div>
<h1 class="text-center">Items</h1>
<div class="container">
    <div class="row">
        <% items.forEach(item => { %>
            <div class="col-md-4">
                <div class="item">
                    <% item.pictures.forEach(picture => { %>
                        <img src="<%= picture %>" class="img-fluid mb-2" alt="Item Image">
                    <% }) %>
                    <% item.names.forEach(name => { %>
                        <h2><%= name.name %></h2>
                    <% }) %>
                    <% item.descriptions.forEach(description => { %>
                        <p><%= description.description %></p>
                    <% }) %>
                    <p>Created: <%= item.createdAt %></p>
                    <p>Updated: <%= item.updatedAt %></p>
                    <form action="/delete-item/<%= item._id %>" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</div>
</body>
</html>